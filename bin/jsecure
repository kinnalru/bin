#!/bin/sh

if [ "$1" == "encrypt" ]; then
	if [ "$2" == "-" ]; then
		openssl enc -aes-256-cbc -a -salt -out "$3"
	else
		openssl enc -aes-256-cbc -a -salt -in "$2" -out "$3"
	fi
elif [ "$1" == "decrypt" ]; then
	if [ "$2" == "-" ]; then
		openssl enc -aes-256-cbc -a -d -out "$3"
	else
		openssl enc -aes-256-cbc -a -d -in "$2" -out "$3"
	fi
else
	echo "invalid command $1"
	echo 1
fi

